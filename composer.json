{
  "name": "uendelsilveira/payment-module-manager",
  "description": "Pacote independente para gerenciar m√∫ltiplos gateways de pagamento (Mercado Pago, PagSeguro, PayPal, Stripe, etc).",
  "type": "library",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "UendelSilveira\\PaymentModuleManager\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "UendelSilveira\\PaymentModuleManager\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^8.1|^8.2|^8.3|^8.4",
    "illuminate/support": "^10.0|^11.0|^12.0",
    "illuminate/http": "^10.0|^11.0|^12.0",
    "illuminate/database": "^10.0|^11.0|^12.0",
    "mercadopago/dx-php": "^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "laravel/pint": "^1.25",
    "orchestra/testbench": "^9.0"
  },
  "extra": {
    "laravel": {
      "providers": [
        "UendelSilveira\\PaymentModuleManager\\Providers\\PaymentServiceProvider"
      ],
      "aliases": {
        "Payment": "UendelSilveira\\PaymentModuleManager\\Facades\\Payment"
      }
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "lint": "vendor/bin/pint"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
