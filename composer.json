{
    "name": "uendelsilveira/payment-module-manager",
    "description": "Um gerenciador de m√≥dulos de pagamento para Laravel.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Uendel Silveira",
            "email": "uendel.silveira@gmail.com"
        }
    ],
    "prefer-stable": true,
    "require": {
        "php": "^8.1",
        "illuminate/support": "^9.0 || ^10.0 || ^11.0",
        "illuminate/http": "^9.0 || ^10.0 || ^11.0",
        "illuminate/database": "^9.0 || ^10.0 || ^11.0",
        "guzzlehttp/guzzle": "^7.2"
    },
    "require-dev": {
        "orchestra/testbench": "^7.0 || ^8.0 || ^9.0",
        "phpunit/phpunit": "^9.0 || ^10.0 || ^11.0",
        "mockery/mockery": "^1.4",
        "laravel/pint": "^1.25"
    },
    "autoload": {
        "psr-4": {
            "UendelSilveira\\PaymentModuleManager\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "UendelSilveira\\PaymentModuleManager\\Tests\\": "tests/",
            "UendelSilveira\\PaymentModuleManager\\Database\\Factories\\": "database/factories/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "extra": {
        "laravel": {
            "providers": [
                "UendelSilveira\\PaymentModuleManager\\Providers\\PaymentServiceProvider"
            ],
            "aliases": {
                "Payment": "UendelSilveira\\PaymentModuleManager\\Facades\\Payment"
            }
        }
    }
}
