# Payment Module Configuration
# Define o gateway de pagamento padrão. Se vazio, o sistema deve usar um padrão interno.
PAYMENT_DEFAULT_GATEWAY=

# Authentication Strategy
# Options: none, api_token, laravel_auth, custom
PAYMENT_AUTH_STRATEGY=none
PAYMENT_API_TOKEN=

# Authorization Strategy
# Options: none, callback, laravel_gate
PAYMENT_AUTHORIZATION_STRATEGY=none

# Webhook Configuration
PAYMENT_WEBHOOK_REQUIRE_SIGNATURE=false
PAYMENT_WEBHOOK_MAX_AGE=300

# Rate Limiting
PAYMENT_RATE_LIMITING_ENABLED=true
PAYMENT_RATE_LIMIT_PROCESS=10
PAYMENT_RATE_LIMIT_QUERY=60
PAYMENT_RATE_LIMIT_WEBHOOK=100
PAYMENT_RATE_LIMIT_SETTINGS=20

# Retry Configuration
PAYMENT_RETRY_ENABLED=true
PAYMENT_RETRY_MAX_ATTEMPTS=3
PAYMENT_RETRY_BACKOFF_STRATEGY=exponential
PAYMENT_RETRY_INITIAL_DELAY=60
PAYMENT_RETRY_BACKOFF_MULTIPLIER=2
PAYMENT_RETRY_MAX_DELAY=3600

# Logging Configuration
# Options: emergency, alert, critical, error, warning, notice, info, debug
PAYMENT_LOG_CHANNEL=payment
PAYMENT_LOG_LEVEL=info
PAYMENT_WEBHOOK_LOG_LEVEL=info
PAYMENT_GATEWAY_LOG_LEVEL=info
PAYMENT_TRANSACTION_LOG_LEVEL=info
